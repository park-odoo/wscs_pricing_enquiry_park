<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- inherit product category form view -->
    <record id="product_category_form_view_inherit_wscs_product_extension" model="ir.ui.view">
        <field name="name">product.category.form.inherit.wscs.product.extension</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position='after'>
                <field name="category_description" class="oe_inline"/>
            </xpath>
        </field>
    </record>
</odoo>
